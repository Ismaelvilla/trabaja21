{% trans_default_domain 'FOSUserBundle' %}
{% extends "base.html.twig" %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block menu %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Iniciar Sesi√≥n </h5>
                        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="form-label-group">
                                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'security.login.username'|trans }}" required autofocus>
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                            </div>
                            <div class="form-label-group">
                                <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required>
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me" value="on">
                                <label class="custom-control-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                            </div>
                            <button id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">{{ 'security.login.submit'|trans }}</button>
                            <hr class="my-4">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


