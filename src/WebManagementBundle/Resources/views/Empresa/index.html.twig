{% extends "base.html.twig" %}
{% block body %}
    <div class="d-flex align-items-center p-3 my-3 bg-purple rounded shadow-sm">
        <div class="col-sm-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb my-2">
                    <li class="breadcrumb-item"><a href="{{ path('web_management_home') }}">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Empresas</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-6 text-right">
            <a href="{{ path('empresas_add') }}"><i class='far fa-file'></i></a>
        </div>
    </div>

    <div class="my-3 p-3 bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Lista de Empresas</h6>
        <table class="table table-striped table-hover bg-white rounded shadow-sm" id="empresaTable">
            <thead>
                <tr>
                    <th></th>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Provincia</th>
                    <th>Poblacion</th>
                    <th>Prioridad</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                {% for empresa in empresas %}
                    <tr>
                        <td>
                            <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#e83e8c"/><text x="50%" y="50%" fill="#e83e8c" dy=".3em">32x32</text></svg>
                        </td>
                        <td>
                            {{ empresa.nombre }}
                        </td>
                        <td>{{ empresa.categoria.nombre }}</td>
                        <td>{{ empresa.provincia.provincia}}</td>
                        <td>{{ empresa.poblacion.nombre }}</td>
                        <td>{{ empresa.prioridad }}</td>
                        <td><a href="{{ path("empresas_edit",{"id":empresa.id}) }}"><i class='far fa-edit'></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/empresasTable.js') }}"></script>
{% endblock %}
