{% extends "base.html.twig" %}
{% block body %}
    <div class=" d-flex align-items-center p-3 my-3 bg-purple rounded shadow-sm">
        <div class="col-sm-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb my-2">
                    <li class="breadcrumb-item"><a href="{{ path('web_management_home') }}">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Categor√≠as</li>
                </ol>
            </nav>
        </div>
        <div class="col-sm-6 text-right">
            <a href="{{ path('categorias_add') }}"><i class='far fa-file'></i></a>
        </div>
    </div>
    <div class="my-3 p-3  bg-white rounded shadow-sm">
        <h6 class="border-bottom border-gray pb-2 mb-0">Lista de Categorias</h6>
        <table class="table table-striped table-hover display" id="categoriaTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr {% if categoria.activo %}class="text-success"{% else %}class="text-danger"{% endif %}>
                        <td>{{ categoria.id }}</td>
                        <td>{{ categoria.nombre }}</td>
                        <td>{{ categoria.fecha|date('d/m/Y H:i') }}</td>
                        <td><a href="{{ path('categorias_details',{'id':categoria.id}) }}"><i class='far fa-edit'></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/categoriasTable.js') }}"></script>
{% endblock %}